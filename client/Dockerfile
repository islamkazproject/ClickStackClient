# Используем Node.js в качестве базового образа
FROM node:18

# Устанавливаем рабочую директорию для приложения
WORKDIR /app

# Копируем файлы package.json и package-lock.json для установки зависимостей
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем остальные файлы приложения
COPY . .

# Собираем приложение React
RUN npm run build

# Устанавливаем сервер для статической выдачи собранного приложения
RUN npm install -g serve

# Устанавливаем переменную окружения для указания порта сервера
ENV PORT=3000

# Открываем порт для приема входящих соединений
EXPOSE 3000

# Запускаем сервер для выдачи собранного приложения
CMD ["serve", "-s", "build", "-l", "tcp://0.0.0.0:$PORT"]
